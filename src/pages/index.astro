import Footer from "@/components/Footer.astro";
---

<Layout title="Asia Gourmet">
	<!-- poner todo el main -->
	<main>
		<Hero />
		<img
			class="absolute top-0 h-screen w-screen z-[-1]"
			src="desk.svg"
			alt=""
		/>
		<Main />
		<Merch />
		<Location />
		<Ticket />
		<Card />
		<Data />
		<Footer />
	</main>
</Layout>
