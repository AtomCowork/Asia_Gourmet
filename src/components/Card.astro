---
import data from '@/data/cards.json'
import Button from './Button.astro'
---

<!-- <div class="absolute top-0 -z-10 h-80 w-80 rounded-full bg-primary " /> -->
<section class="flex flex-col gap-10 md:grid md:grid-cols-3">
  {
    data.map(resp => (
      <div class="flex flex-col rounded-lg bg-white p-8">
        <h3 class="text-primary">{resp.title}</h3>
        <div class="relative">
          <img src={resp.img} alt="ticket" class="h-full" />
        </div>
        <ul class="flex flex-col justify-center">
          {resp.info.map(inf => (
            <li class="text-primary">{inf}</li>
          ))}
        </ul>
        <br />
        <Button name="COMPRAR" display="" />
      </div>
    ))
  }
</section>
