---
import info from '@/data/info.json'
---

<div class="container mx-auto flex flex-col gap-5">
  <div>
    <h2 class="text-center text-2xl font-bold text-primary md:text-4xl">
      Â¿TE QUEDO ALGUNA DUDA?
    </h2>
    <p class="text-center text-xl text-primary md:text-2xl">
      Revisa nuestras preguntas frecuentes
    </p>
  </div>

  {
    info.map(({ question, answer }) => (
      <div>
        <div id="showAnswer" class="border-t-2 p-5 md:text-xl">
          <p class="flex flex-row justify-between font-bold">
            {question}
            <img
              id="arrow"
              src="arrow_Vector.svg"
              alt="display answer"
              class="aspect-[1/1]"
            />
          </p>
          <div class="hidden pr-4 pt-4 md:text-lg" id="answer">
            <p> {answer}</p>
          </div>
        </div>
      </div>
    ))
  }
</div>

<script>
  const $questions = document.querySelectorAll('#showAnswer')

  // .classList.toggle('hidden')
  $questions.forEach(question => {
    question.addEventListener('click', e => {
      const $answer = question.querySelector('#answer')
      const $arrow = question.querySelector('#arrow')
      console.log($answer)

      $answer.classList.toggle('hidden')
      $arrow.classList.toggle('rotate-180')
    })
  })
</script>
